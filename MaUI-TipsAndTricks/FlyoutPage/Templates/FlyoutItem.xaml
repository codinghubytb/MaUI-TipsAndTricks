<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlyoutPage.Templates.FlyoutItem"
             x:Name="this">

    <Grid ColumnDefinitions="Auto,*"
          BindingContext="{x:Reference this}"
          ColumnSpacing="10"
          Margin="20,10">

        <Image 
                Source="{Binding Icon}"
                WidthRequest="30"
                HeightRequest="30"/>
        <Label 
            FontSize="Medium"
                Grid.Column="1"
                Text="{Binding Title}"
                TextColor="{AppThemeBinding Light={StaticResource DarkMode}, Dark={StaticResource LightMode}}"
                VerticalTextAlignment="Center" />
    </Grid>

</ContentView>
